<AnchorPane prefHeight="400.0" prefWidth="700.0" style="-fx-background-color: #0A122A;" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.login_controller">
   <children>
      <AnchorPane layoutX="376.0" layoutY="49.0" opacity="0.83" prefHeight="302.0" prefWidth="287.0" style="-fx-background-color: #E7DECD; -fx-border-color: #804E49; -fx-border-width: 6;">
