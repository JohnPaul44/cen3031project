            <Cursor fx:constant="HAND" />
         </cursor>
         <effect>
            <Reflection />
         </effect>
         <font>
            <Font name="Georgia" size="13.0" />
         </font>
      </Button>
   </children>
   <effect>
      <Glow />
   </effect>
