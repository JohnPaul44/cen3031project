            <TextField fx:id="username" focusTraversable="false" layoutX="39.0" layoutY="73.0" onKeyPressed="#LoginEventKey" opacity="0.9" prefHeight="25.0" prefWidth="200.0" promptText="username">
               <cursor>
                  <Cursor fx:constant="TEXT" />
               </cursor>
            </TextField>
            <PasswordField fx:id="password" focusTraversable="false" layoutX="39.0" layoutY="115.0" onKeyPressed="#LoginEventKey" opacity="0.9" prefHeight="25.0" prefWidth="200.0" promptText="password">
